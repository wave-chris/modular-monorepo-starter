{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@domain/user": [
        "libs/domain/user/src"
      ],
      "@domain/user/*": [
        "libs/domain/user/src/*"
      ],
      "@domain/relationship": [
        "libs/domain/relationship/src"
      ],
      "@domain/relationship/*": [
        "libs/domain/relationship/src/*"
      ],
      "@system/firebase-realtime-db-trigger": [
        "libs/system/firebase-realtime-db-trigger/src"
      ],
      "@system/firebase-realtime-db-trigger/*": [
        "libs/system/firebase-realtime-db-trigger/src/*"
      ],
      "@common/util": [
        "libs/common/util/src"
      ],
      "@common/util/*": [
        "libs/common/util/src/*"
      ],
      "@common/internal-exception": [
        "libs/common/internal-exception/src"
      ],
      "@common/internal-exception/*": [
        "libs/common/internal-exception/src/*"
      ],
      "@domain/friendship": [
        "libs/friendship/src"
      ],
      "@domain/friendship/*": [
        "libs/friendship/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}